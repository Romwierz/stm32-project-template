{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build STM",
			"type": "shell",
			"command": "./build_with_check.sh",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Rebuild STM",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clean STM", "Build STM"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean STM",
			"type": "shell",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build STM (Dry Run)",
			"type": "shell",
			"command": "make -n -B -C src | grep -v 'mkdir -p'",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Update Compilation Info",
			"type": "shell",
			"command": "bear -- make -B",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Delete Compilation Info",
			"type": "shell",
			"command": "rm compile_commands.json",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}